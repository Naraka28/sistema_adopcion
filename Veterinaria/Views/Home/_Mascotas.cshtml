@model List<Gatos>

<div class="container">
    <div class="row g-4">
        @foreach (var gato in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
                <div class="card flex-fill d-flex flex-column">
                    <img src="@Url.Content("~/images/" + gato.Foto)"
                         class="card-img-top img-fluid"
                         alt="@gato.Nombre"
                         style="object-fit: cover; height: 300px;">

                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">@gato.Nombre</h4>
                        <p class="card-text">
                            <b>Edad:</b> @gato.Edad <br />
                            <b>Raza:</b> @gato.Raza <br />
                            <b>Sexo:</b> @gato.Sexo
                        </p>
                        <div class="mt-auto">
                            <a href="Contacto" class="btn btn-outline-success w-100 mb-2">Adoptar</a>
                            <a href="#" class="btn btn-primary w-100">Ver más</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
